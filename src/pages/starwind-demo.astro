---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/sections/Header.astro";
import Footer from "../components/sections/Footer.astro";
import Badge from "../components/ui/badge/Badge.astro";
import Button from "../components/ui/button/Button.astro";
import Card from "../components/ui/card/Card.astro";
import FeaturedPost from "../components/ui/card/FeaturedPost.astro";
import Carousel from "../components/ui/carousel/Carousel.astro";
import Timeline from "../components/ui/timeline/Timeline.astro";

const pageTitle = "Starwind Demo";
const pageDescription = "Showcase of Starwind-themed components under dark mode tokens";
// Logos from assets
import notionLogo from "../assets/logos/Notion-logo.svg";
import googleAdsLogo from "../assets/logos/GoogleAds-logo.svg";
import posthogLogo from "../assets/logos/posthog-logo.svg";
import astroLogo from "../assets/logos/Astro-logo.svg";
import tailwindLogo from "../assets/logos/Figma-logo.svg";
---

<html lang="en" data-theme="dark" class="dark">
  <head>
    <BaseHead title={pageTitle} description={pageDescription} />
  </head>
  <body>
    <Header />
    <main class="mx-auto max-w-6xl px-4 py-12 space-y-10">
      <section class="space-y-4">
        <h1 class="text-4xl font-bold">{pageTitle}</h1>
        <p class="text-lg text-[color:var(--color-text-muted)]">{pageDescription}</p>
        <div class="flex gap-3 flex-wrap">
          <Badge>Default</Badge>
          <Badge variant="accent">Accent</Badge>
          <Badge variant="info">Info</Badge>
          <Badge variant="success">Success</Badge>
          <Badge variant="warning">Warning</Badge>
          <Badge variant="error">Error</Badge>
          <Badge variant="outline">Outline</Badge>
        </div>
      </section>

      <section class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="card-surface p-6 space-y-4">
          <h2 class="text-2xl font-semibold">Buttons</h2>
          <div class="flex flex-wrap gap-3">
            <Button variant="primary">Primary</Button>
            <Button variant="secondary">Secondary</Button>
            <Button variant="ghost">Ghost</Button>
            <Button variant="outline">Outline</Button>
            <Button size="lg">Large</Button>
            <Button size="sm">Small</Button>
          </div>
        </div>

        <div class="card-surface p-6 space-y-4">
          <h2 class="text-2xl font-semibold">Card</h2>
          <Card>
            <div class="p-4 space-y-2">
              <h3 class="text-xl font-semibold">Surface card</h3>
              <p class="text-[color:var(--color-text-secondary)]">Uses Starwind CSS vars mapped to our tokens.</p>
            </div>
          </Card>
        </div>
      </section>

      <section class="card-surface p-6 space-y-6">
        <h2 class="text-2xl font-semibold">Featured Post</h2>
        <div class="card-surface p-4">
          <h3 class="text-xl font-semibold">Design tokens with Starwind</h3>
          <p class="text-[color:var(--color-text-secondary)]">Mapping custom tokens to Starwind variables for consistent theming.</p>
        </div>
      </section>

      <section class="card-surface p-6 space-y-6">
        <h2 class="text-2xl font-semibold">Timeline</h2>
        <Timeline items={[
          { title: 'Marketing Engineer', company: 'Briefer (YC)', region: 'Global', description: 'Built ABM campaigns and SEO foundations.', technologies: ['ABM', 'SEO', 'Intercom'] },
          { title: 'Growth & Inbound', company: 'ExitLag', region: 'Global', description: 'Launched blog and scaled CRM automations.', technologies: ['SEO', 'CRM', 'Media Buying'] },
        ]} />
      </section>
    </main>
    <Footer />
  </body>
  </html>