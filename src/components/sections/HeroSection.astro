---
import Button from "../ui/button/Button.astro";
import weighMyBruLogo from "../../assets/logos/Weighmybru-logo.png";

interface Cta {
  text: string;
  href: string;
}

interface Props {
  title: string;
  subtitle?: string;
  showCTA?: boolean;
  showLogo?: boolean;
  primaryCTA?: Cta;
  secondaryCTA?: Cta;
}

const {
  title,
  subtitle,
  showCTA = false,
  showLogo = true,
  primaryCTA,
  secondaryCTA
} = Astro.props as Props;
---

<section class="w-full pt-0 pb-0 md:pt-0 md:pb-0">
  <div class="mx-auto max-w-5xl px-4 text-center">
    <!-- WeighMyBru Logo -->
    {showLogo && (
      <div class="mb-6">
        <img 
          src={weighMyBruLogo.src} 
          alt="WeighMyBru Logo" 
          class="mx-auto block w-52 md:w-86"
          style="height: auto;"
        />
      </div>
    )}
    
    <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight text-foreground">
      <span class="bg-gradient-to-r from-[var(--accent)] to-[var(--accent-dark)] bg-clip-text text-transparent">{title}</span>
    </h1>
    {subtitle && (
      <p class="mt-4 text-lg md:text-xl text-[color:var(--color-text-secondary)] max-w-2xl mx-auto">
        {subtitle}
      </p>
    )}
    {showCTA && (primaryCTA || secondaryCTA) && (
      <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-3">
        {primaryCTA && (
          <Button href={primaryCTA.href} variant="primary" size="md">{primaryCTA.text}</Button>
        )}
        {secondaryCTA && (
          <Button href={secondaryCTA.href} variant="secondary" size="md">{secondaryCTA.text}</Button>
        )}
      </div>
    )}
  </div>
  
</section>


